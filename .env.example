# Environment
NODE_ENV=development
PORT=3000

# Database connection for Prisma
DATABASE_URL=postgresql://user:password@localhost:5432/gold_nest

# Authentication
JWT_SECRET=changeme-dev-secret
JWT_EXPIRES_IN=15m

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# API Documentation
SWAGGER_ENABLED=true

UPLOAD_ROOT=uploads

# Tahesab API
TAHESAB_BASE_URL=https://127.0.0.1:8081
TAHESAB_DB_NAME=DB1
TAHESAB_AUTH_TOKEN=changeme-tahesab-token
TAHESAB_TIMEOUT=10000
# If Tahesab runs with self-signed TLS, set this to "false" to relax verification.
TAHESAB_TLS_REJECT_UNAUTHORIZED=false
